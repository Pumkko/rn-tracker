---
import "@/styles/globals.css";
import NavigationMenu from "./nav/NavigationMenu.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav
			class="flex justify-center gap-4 p-5 sticky top-0 shadow-md bg-primary text-primary-foreground hover:bg-primary-foreground hover:text-primary"
		>
			<NavigationMenu />
		</nav>

		<div class="p-5">
			<slot />
		</div>
	</body>
</html>
